/*
    main.bit -- Main Bit File for the Embedthis PCRE Library
 */

Bit.load({
    blend: [
        "${BITS}/embedthis.bit",
    ],
    settings: {
        product: 'pcre',
        title: 'PCRE Library',
        company: 'Embedthis',
        version: '1.0.2',
        buildNumber: '0',
        bit: '0.9.3',
        prefixes: 'embedthis-prefixes',
        sync: [],
    },

    usage: {
        assert: 'Enable program assertions',
    },

    targets: {
        libpcre: {
            type: 'lib',
            headers: [ 'src/*.h' ],
            sources: [ 'src/*.c' ],
        },
        projects: {},
    },

    manifest: {
        packages: {
            pak: {
                inherit:    'embedthis-manifest',
                prefixes:   [ 'src'],
                sets:       [ 'pak' ],
            },
        },
        files: [
            {   from:   'package/pcre.bit',
                to:     '${src}/pcre.bit',
                set:    'pak',
            },{
                from:   ['src/pcre.h'],
                to:     '${src}/',
                set:    'pak',
            },{
                from:   ['src/config.h', 'src/pcre_internal.h', 'src/ucp.h', 'src/ucpinternal.h', 'src/ucptable.h', 'src/*.c'], 
                to:     '${src}/pcre.c',
                cat:    true,
                filter: /^#inc.*pcre.*$|#inc.*config.h.*$|#inc.*ucp.*.h.*$/mg,
                header: '#include \"bit.h\"\n#include \"pcre.h\"',
                title:  '${settings.title} Library Source',
                set:    'pak',
            },
        ],
    },
})
